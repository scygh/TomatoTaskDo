<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/mytask_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#ccc">

        <TextView
            android:id="@+id/text_counttitle"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_descirption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:text="Descirption: "
            android:textColor="#888888"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_descirption"
            android:layout_marginLeft="60dp"
            android:singleLine="true"
            android:text="detaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetail"
            android:ellipsize="end"
            android:textColor="#fff"
             />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="priority:"
                android:textColor="#fff"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_priority_size"
                android:layout_width="20dp"
                android:textColor="#fff"
                android:singleLine="true"
                android:maxWidth="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>