<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/FFFFFF"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/rank_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rank_item_header_img"
        app:roundAsCircle="true"
        app:roundedCornerRadius="20dp"
        android:layout_margin="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fcs_icon_mine_head_login"
        />
    <TextView
        android:id="@+id/rank_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:text="沈程阳"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/rank_item_focustime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/rank_item_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14dp"
            />
        <ImageView
            android:id="@+id/rank_item_heart"
            android:layout_width="18dp"
            android:clickable="true"
            android:layout_height="18dp"
            android:src="@drawable/heart"/>

    </LinearLayout>

</LinearLayout>